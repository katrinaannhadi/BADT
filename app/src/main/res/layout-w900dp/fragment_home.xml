<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/owl_pink_500"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:targetApi="o">

    <TextView
        android:id="@+id/choose"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="end"
        android:padding="@dimen/grid_1"
        android:paddingTop="@dimen/grid_1"
        android:text="Business Analysis Methods"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Owl.Headline2"
        android:textColor="@color/owl_blue_dark_primary"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:ignore="MissingPrefix" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="276dp"
        android:layout_height="286dp"
        android:layout_marginTop="148dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toStartOf="@+id/tv"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="478dp"
        android:layout_height="253dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="160dp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/grid_2"
        android:text="@string/scroll"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Owl.Headline4"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="339dp"
        android:layout_height="205dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/grid_2"
        android:text="@string/rainbow"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Owl.Headline5"
        android:textColor="@color/design_default_color_on_secondary"
        app:layout_constraintEnd_toEndOf="@+id/tv"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="@+id/tv"
        app:layout_constraintTop_toTopOf="@+id/choose"
        tools:ignore="RtlCompat" />


</androidx.constraintlayout.widget.ConstraintLayout>